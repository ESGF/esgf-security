        <!-- PNL access control for CSSEF project -->
        <policy resource=".*cssef_data.*" attribute_type="CSSEF_PNNL" attribute_value="default" action="Read"/> 
        
        <!-- NOAA datasets -->
        <policy resource=".*oc_gis_downscaling.*" attribute_type="ANY" attribute_value="" action="Read"/>
